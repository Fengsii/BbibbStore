 @using EFENGSI_RAHMANTO_ZALUKHU.Models.DTO
@model UserProfileDTO

@{
    Layout = null;
}


<!-- Favorites Section -->
<div class="section" id="favorites">
    <h2><i class="fa fa-heart"></i> Produk Favorit</h2>
    <div class="card">
        <div id="favorite-list">
            <div class="favorite-item">
                <img src="https://images.unsplash.com/photo-1590402494682-9d6710d90c261?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80" alt="Satin Dress">
                <div class="favorite-details">
                    <p><strong>Produk:</strong> Elegan Satin Dress</p>
                    <p><strong>Harga:</strong> Rp 799.000</p>
                </div>
                <button onclick="removeFavorite('satin-dress')">Hapus</button>
            </div>
            <div class="favorite-item">
                <img src="https://images.unsplash.com/photo-1590402494827-4b4b5e123113?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80" alt="Silk Blouse">
                <div class="favorite-details">
                    <p><strong>Produk:</strong> Silk Blouse</p>
                    <p><strong>Harga:</strong> Rp 350.000</p>
                </div>  
                <button onclick="removeFavorite('silk-blouse')">Hapus</button>
            </div>
        </div>
    </div>
</div>
<script>
    // Favorites
       function renderFavorites() {
           const favoriteList = document.getElementById('favorite-list');
           favoriteList.innerHTML = '';
           userData.favorites.forEach(item => {
               const div = document.createElement('div');
               div.className = 'favorite-item';
               div.innerHTML = `
                   <img src="${item.image}" alt="${item.name}">
                   <div class="favorite-details">
                       <p><strong>Produk:</strong> ${item.name}</p>
                       <p><strong>Harga:</strong> Rp ${item.price.toLocaleString()}</p>
                   </div>
                   <button onclick="removeFavorite('${item.id}')">Hapus</button>
               `;
               favoriteList.appendChild(div);
           });
       }

       window.removeFavorite = function(id) {
           userData.favorites = userData.favorites.filter(item => item.id !== id);
           localStorage.setItem('userData', JSON.stringify(userData));
           renderFavorites();
       };

</script>