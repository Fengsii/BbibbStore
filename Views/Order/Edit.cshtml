
@* SETELAH DARI CONTROLLER *@

@using EFENGSI_RAHMANTO_ZALUKHU.Models.DB
@using EFENGSI_RAHMANTO_ZALUKHU.Models.DTO
@model Order


@{
    ViewData["Title"] = "Order";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Product</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add New Order</h5>

                        <!-- Horizontal Form -->
                        @* asp-action="Edit" harus edit *@
                        <form asp-controller="Order" asp-action="Edit" method="post">
                            <div class="row mb-3" hidden>
                                <label for="Id" class="col-sm-2 col-form-label">Id</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Id" asp-for="Id" readonly>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Supplier" class="col-sm-2 col-form-label">User</label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="UserId" asp-items="ViewBag.User" disabled>
                                        <option value="">-- Pilih User --</option>
                                    </select>
                                    <input type="hidden" asp-for="UserId" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="OrderCode" class="col-sm-2 col-form-label">Order Code</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control price-format" id="ordercode" asp-for="OrderCode">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-2 col-form-label">Status</label>
                                <div class="col-sm-10">
                                    <select asp-for="Status" class="form-select" aria-label="Default select example">
                                        <option value=0>Canceled</option>
                                        <option value=1>Unpaid</option>
                                        <option value=2>Processing</option>
                                        <option value=3>Shipped</option>
                                        <option value=4>Delivered</option>
                                    </select>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Save Data</button>
                                <a href="@Url.Action("Index","Order")" class="btn btn-info">Cancel</a>
                            </div>
                        </form><!-- End Horizontal Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->