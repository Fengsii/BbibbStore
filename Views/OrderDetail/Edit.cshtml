
@* SETELAH DARI CONTROLLER *@

@using EFENGSI_RAHMANTO_ZALUKHU.Models.DB
@using EFENGSI_RAHMANTO_ZALUKHU.Models.DTO
@model OrderDetail


@{
    ViewData["Title"] = "Order Detail";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Product</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add New Order Detail</h5>

                        <!-- Horizontal Form -->
                        @* asp-action="Edit" harus edit *@
                        <form asp-controller="OrderDetail" asp-action="Edit" method="post">
                            <div class="row mb-3" hidden>
                                <label for="Id" class="col-sm-2 col-form-label">Id</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Id" asp-for="Id" readonly>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Supplier" class="col-sm-2 col-form-label">Order Code</label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="OrderId" asp-items="ViewBag.Order" disabled>
                                        <option value="">-- Pilih Order Code --</option>
                                    </select>
                                    <input type="hidden" asp-for="OrderId" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Supplier" class="col-sm-2 col-form-label">Product</label>
                                <div class="col-sm-10">
                                    <select class="form-control" asp-for="ProductId" asp-items="ViewBag.Product" disabled>
                                        <option value="">-- Pilih Product --</option>
                                    </select>
                                    <input type="hidden" asp-for="ProductId" />
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Image" class="col-sm-2 col-form-label">Image</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="image" asp-for="Image">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Quantity" class="col-sm-2 col-form-label">Quantity</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Quantity" asp-for="Quantity">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Size" class="col-sm-2 col-form-label">Size</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Size" asp-for="SelectedSize">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="Price" class="col-sm-2 col-form-label">Price</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Price" asp-for="PriceAtPurchase">
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Save Data</button>
                                <a href="@Url.Action("Index","OrderDetail")" class="btn btn-info">Cancel</a>
                            </div>
                        </form><!-- End Horizontal Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->